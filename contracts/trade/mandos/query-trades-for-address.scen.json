{
    "name": "trade query trades for address",
    "steps": [
        {
            "step": "externalSteps",
            "path": "init.scen.json"
        },
        {
            "step": "setState",
            "accounts": {
                "address:alice": {
                    "nonce": "0",
                    "balance": "10,000,000,000,000,000,000",
                    "esdt": {}
                },
                "address:bob": {
                    "nonce": "0",
                    "balance": "1,000,000,000,000,000,000",
                    "esdt": {
                        "str:NOPE-987654": "1,000,000",
                        "str:TEST-123456": "4,000,000"
                    }
                },
                "address:carol": {
                    "nonce": "0",
                    "balance": "3,000,000,000,000,000,000",
                    "esdt": {
                        "str:TEST-123456": "4,000,000",
                        "str:NOPE-987654": "1,000,000"
                    }
                }
            }
        },
        {
            "step": "scCall",
            "txId": "createTrade-1",
            "tx": {
                "from": "address:alice",
                "to": "sc:trade",
                "egldValue": "1,000,000,000,000,000,000",
                "function": "createTrade",
                "arguments": [
                    "1,000,000",
                    "str:TEST-123456"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": ["1"],
                "status": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "txId": "createTrade-2",
            "tx": {
                "from": "address:bob",
                "to": "sc:trade",
                "esdtValue": [
                    {
                        "tokenIdentifier": "str:TEST-123456",
                        "value": "1,000,000"
                    }
                ],
                "function": "createTrade",
                "arguments": [
                    "1,000,000,000,000,000,000",
                    "str:EGLD"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": ["2"],
                "status": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "txId": "createTrade-3",
            "tx": {
                "from": "address:carol",
                "to": "sc:trade",
                "egldValue": "1,000,000,000,000,000,000",
                "function": "createTrade",
                "arguments": [
                    "1,000,000",
                    "str:TEST-123456",
                    "address:bob"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": ["3"],
                "status": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scQuery",
            "tx": {
                "to": "sc:trade",
                "function": "getTradesFor",
                "arguments": [
                    "address:bob"
                ]
            },
            "expect": {
                "out": [
                    [
                        "u64:2",
                        {
                            "0-offer_address": "address:bob",
                            "1-offer_asset_token": "nested:str:TEST-123456",
                            "2-offer_asset_quantity": "biguint:1,000,000",
                            "3-trader_address": "0x00",
                            "4-trader_asset_token": "nested:str:EGLD",
                            "5-trader_asset_quantity": "biguint:1,000,000,000,000,000,000"
                        },
                        "u64:3",
                        {
                            "0-offer_address": "address:carol",
                            "1-offer_asset_token": "nested:str:EGLD",
                            "2-offer_asset_quantity": "biguint:1,000,000,000,000,000,000",
                            "3-trader_address": "0x01|address:bob",
                            "4-trader_asset_token": "nested:str:TEST-123456",
                            "5-trader_asset_quantity": "biguint:1,000,000"
                        }
                    ]
                ],
                "status": "",
                "gas": "*",
                "refund": "*"
            }
        }
    ]
}
